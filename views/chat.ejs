#profile{
    position: relative;
    right: -4.2%;
}
#pname {
	top: -10px;
    color: black;
    position: relative;
    right: -10%;

}
.message__bubble {
    border-top-right-radius: 0;
    background-image: linear-gradient(to left, #00c6ff, #0072ff);
